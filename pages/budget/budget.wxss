.container {
  padding: 20rpx;
  background-color: #f8f9fa;
  min-height: 100vh;
}
.section {
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.03);
  padding: 20rpx 30rpx;
}
.section-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #36b37e;
  margin-bottom: 20rpx;
}
.budget-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 18rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}
.budget-item:last-child {
  border-bottom: none;
}
.category {
  font-size: 28rpx;
  color: #333;
}
.budget-edit-box {
  display: flex;
  align-items: center;
  gap: 10rpx;
}
.budget-input {
  width: 140rpx;
  height: 40rpx;
  border: 1rpx solid #eee;
  border-radius: 6rpx;
  padding: 0 10rpx;
  font-size: 26rpx;
  margin-right: 8rpx;
}
.budget-btn {
  background: #36b37e;
  color: #fff;
  border-radius: 8rpx;
  font-size: 24rpx;
  padding: 0 16rpx;
  margin-left: 4rpx;
}
.budget-btn.cancel {
  background: #f5f5f5;
  color: #888;
}
.budget-btn:active {
  opacity: 0.8;
}
