.container {
  padding: 20rpx;
  background-color: #f5f7fa;
  min-height: 100vh;
}

.summary {
  display: flex;
  justify-content: space-around;
  background: #fff;
  padding: 40rpx 30rpx;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.05);
}

.income,
.expense {
  text-align: center;
}

.income text,
.expense text {
  font-size: 28rpx;
  color: #666;
}

.amount {
  font-size: 40rpx;
  font-weight: bold;
  color: #36b37e;
  display: block;
  margin-top: 10rpx;
}

.expense .amount {
  color: #ff5630;
}

.record-list {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 日期分组标题样式 */
.date-header {
  padding: 20rpx 30rpx;
  background-color: #f9fafb;
  border-bottom: 1rpx solid #eee;
}

.date-header .date {
  font-size: 26rpx;
  color: #888;
  font-weight: 500;
}

.record-item {
  display: flex;
  justify-content: space-between;
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  background: #fff;
  transition: background-color 0.3s;
}

.record-item:active {
  background-color: #f9fafb;
}

.record-item:last-child {
  border-bottom: none;
}

.left {
  display: flex;
  flex-direction: column;
}

.category-container {
  display: flex;
  align-items: center;
}

.icon {
  font-size: 36rpx;
  margin-right: 14rpx;
  background: #f5f7fa;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
}

.income .icon {
  background-color: rgba(54, 179, 126, 0.1);
}

.expense .icon {
  background-color: rgba(255, 86, 48, 0.1);
}

.category {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.time {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
  margin-left: 74rpx;
}

.right {
  display: flex;
  align-items: center;
}

.right .amount {
  font-size: 32rpx;
  margin-right: 20rpx;
  font-weight: 600;
}

.income .right .amount {
  color: #36b37e;
}

.expense .right .amount {
  color: #ff5630;
}

.delete {
  color: #888;
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border: 1rpx solid #eee;
  border-radius: 30rpx;
  background-color: #f9fafb;
  transition: all 0.3s;
}

.delete:active {
  background-color: #f0f0f0;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  background: #fff;
  border-radius: 16rpx;
  margin-top: 30rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.05);
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 10rpx;
}

.empty-subtext {
  font-size: 28rpx;
  color: #999;
}

/* 筛选状态显示 */
.filter-status {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  padding: 20rpx 30rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: #333;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.03);
}

.filter-icon {
  font-size: 32rpx;
}

/* 筛选面板 */
.filter-panel-container {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  z-index: 999;
}

.filter-panel-mask {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.filter-panel {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  padding-bottom: env(safe-area-inset-bottom);
  max-height: 80vh;
  overflow-y: auto;
}

.filter-panel-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.filter-panel-header text {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.filter-panel-header .close {
  font-size: 40rpx;
  color: #999;
  padding: 0 10rpx;
}

.filter-section {
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.filter-section:last-child {
  border-bottom: none;
}

.filter-section-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.filter-options {
  display: flex;
  flex-wrap: wrap;
}

.filter-option {
  padding: 16rpx 30rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  font-size: 26rpx;
  color: #333;
}

.filter-option.active {
  background: rgba(54, 179, 126, 0.1);
  color: #36b37e;
  font-weight: 500;
}
